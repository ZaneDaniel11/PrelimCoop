@model PrelimCoop.Entities.LoanDb


    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <div class="container">
        <h2>Loan Details</h2>
        <table class="table">
            <tr>
                <th>Client</th>
                <td>@Model.ClientId</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>@Model.Type</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>@Model.Amount</td>
            </tr>
            <tr>
                <th>No of Payment</th>
                <td>@Model.NoOfPayment</td>
            </tr>
            <tr>
                <th>Deduction</th>
                <td>@Model.Deduction</td>
            </tr>
            <tr>
                <th>Date Created</th>
                <td>@Model.DateCreated</td>
            </tr>
            <tr>
                <th>Receivable Amount</th>
                <td>@Model.RecievableAmount</td>
            </tr>
            <tr>
                <th>Due Date</th>
                <td>@Model.DueDate</td>
            </tr>
            <tr>
                <th>Payable Amount</th>
                <td>@Model.PayableAmount</td>
            </tr>
        </table>
        <button class="btn btn-secondary print-btn" onclick="window.print()">Print</button>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

