@model List<PrelimCoop.Entities.LoanDb>

<a class="btn btn-success" href="/loan/create"><i class="fas fa-plus"></i> Create New</a>
<div class="container">
    <table class="display" id="list-table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Type</th>
                <th>Amount</th>
                <th>No of Payment</th>
                <th>Deduction</th>
                <th>Date Created</th>
                <th>Receivable Amount</th>
                <th>Due Date</th>
                <th>Payable Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.ClientId</td>
                    <td>@loan.Type</td>
                    <td>@loan.Amount</td>
                    <td>@loan.NoOfPayment</td>
                    <td>@loan.Deduction</td>
                    <td>@loan.DateCreated</td>
                    <td>@loan.RecievableAmount</td>
                    <td>@loan.DueDate</td>
                    <td>@loan.PayableAmount</td>
                    <td>
                        <div class="button-container">
                            <a class="btn btn-warning" href="/loan/edit/@loan.Id" title="Update"><i class="fas fa-pencil-alt" style="font-size: 0.8rem;"></i></a>
                            <a class="btn btn-danger" href="/loan/delete/@loan.Id" title="Delete"><i class="fas fa-trash-alt" style="font-size: 0.8rem;"></i></a>
                            <a class="btn btn-primary" href="/payments/viewpayments/@loan.ClientId" title="View Payments"><i class="fas fa-eye" style="font-size: 0.8rem;"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
