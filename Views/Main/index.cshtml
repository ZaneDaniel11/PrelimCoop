<div class="modal fade" id="loanModal" tabindex="-1" aria-labelledby="loanModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loanModalLabel">Make Loan for Client:</h5>
        <!-- Display the client's ID or name here -->
        <span id="clientInfo"></span>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Add form elements for making a loan -->
        <form>
          <!-- Hidden input field to store the client's ID -->
          <input type="text" id="clientId" value="">
          <div class="mb-3">
            <label for="loanAmount" class="form-label">Loan Amount</label>
            <input type="text" class="form-control" id="loanAmount" placeholder="Enter loan amount">
          </div>
          <div class="mb-3">
            <label for="loanTerm" class="form-label">Loan Term</label>
            <input type="text" class="form-control" id="loanTerm" placeholder="Enter loan term">
          </div>
          <!-- Add more input fields as needed -->
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript to update client info in the modal -->
<script>
  // Function to update client info in the modal
  function updateClientInfo(clientId, clientName) {
    document.getElementById('clientId').value = clientId;
    document.getElementById('clientInfo').textContent = clientName;
  }

  // Example usage: updateClientInfo(123, 'John Doe');
</script>